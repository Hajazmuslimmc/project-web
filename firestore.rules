rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all users for viewing tiers
    match /tiers/{tierId} {
      allow read: if true;

      // Allow write access for authenticated users (admins)
      // In production, you might want to restrict this to specific admin users
      allow write: if request.auth != null;

      // Allow create for authenticated users
      allow create: if request.auth != null;

      // Allow update for authenticated users
      allow update: if request.auth != null;

      // Allow delete for authenticated users
      allow delete: if request.auth != null;
    }

    // Users collection - for future user management
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }

    // Admin-only collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
